{
  "info": {
    "name": "Food Delivery API - Production",
    "description": "Production-ready Food Delivery API with authentication",
    "version": "2.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://food-delivery-9zla5h5hr-rishi-singhs-projects.vercel.app",
      "description": "Production API Base URL - Live Deployment"
    },
    {
      "key": "AUTH_TOKEN",
      "value": "",
      "description": "Authentication token - Will be set automatically after login"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Auto-update BASE_URL for common deployment platforms",
          "if (pm.request.url.host && pm.request.url.host.includes('onrender.com')) {",
          "    pm.variables.set('BASE_URL', 'https://' + pm.request.url.host);",
          "} else if (pm.request.url.host && pm.request.url.host.includes('railway.app')) {",
          "    pm.variables.set('BASE_URL', 'https://' + pm.request.url.host);",
          "} else if (pm.request.url.host && pm.request.url.host.includes('vercel.app')) {",
          "    pm.variables.set('BASE_URL', 'https://' + pm.request.url.host);",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Health & Info",
      "item": [
        {
          "name": "Root - API Documentation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/",
              "host": ["{{BASE_URL}}"],
              "path": [""]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/health",
              "host": ["{{BASE_URL}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Detailed Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/health/detailed",
              "host": ["{{BASE_URL}}"],
              "path": ["health", "detailed"]
            }
          }
        }
      ]
    },
    {
      "name": "User Service",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('AUTH_TOKEN', response.token);",
                  "        console.log('Auth token saved:', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"testuser@example.com\",\n  \"phone\": \"+1234567890\",\n  \"address\": \"123 Test St, Test City\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/users/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "users", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('AUTH_TOKEN', response.token);",
                  "        console.log('Auth token updated:', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/users/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "users", "login"]
            }
          }
        },
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{AUTH_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/users/profile",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "users", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Restaurant Service",
      "item": [
        {
          "name": "Get All Restaurants",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/restaurants",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "restaurants"]
            }
          }
        },
        {
          "name": "Get Restaurant Menu",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/restaurants/1/menu",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "restaurants", "1", "menu"]
            }
          }
        }
      ]
    },
    {
      "name": "Order Service",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "{{AUTH_TOKEN}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurantId\": 1,\n  \"items\": [\n    {\n      \"id\": 1,\n      \"name\": \"Margherita Pizza\",\n      \"quantity\": 2,\n      \"price\": 12.99\n    }\n  ],\n  \"totalAmount\": 25.98,\n  \"deliveryAddress\": \"123 Test St, Test City\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/orders",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{AUTH_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/orders/user",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "orders", "user"]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"preparing\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/orders/1/status",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "orders", "1", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "Delivery Service",
      "item": [
        {
          "name": "Register Delivery Agent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Agent\",\n  \"phone\": \"+1234567890\",\n  \"vehicleType\": \"bike\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/delivery/agents/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "delivery", "agents", "register"]
            }
          }
        },
        {
          "name": "Update Agent Location",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"latitude\": 40.7128,\n  \"longitude\": -74.0060\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/delivery/agents/1/location",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "delivery", "agents", "1", "location"]
            }
          }
        },
        {
          "name": "Accept Delivery",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": 1,\n  \"agentId\": 1\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/delivery/accept",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "delivery", "accept"]
            }
          }
        }
      ]
    }
  ]
}
