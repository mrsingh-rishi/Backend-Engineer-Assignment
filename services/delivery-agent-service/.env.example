# Environment
NODE_ENV=development
PORT=3003

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/food_delivery_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=delivery-agent-service
KAFKA_GROUP_ID=delivery-agent-service-group

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-delivery-agent-service
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Metrics and Monitoring
METRICS_PORT=9003
ENABLE_METRICS=true

# Location Update Configuration
LOCATION_UPDATE_INTERVAL_MS=30000
MAX_DELIVERY_RADIUS_KM=50
ASSIGNMENT_RADIUS_KM=10

# Other Configuration
BCRYPT_ROUNDS=12
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:3000
